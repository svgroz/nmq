{
    "version": 2,
    "configurePresets": [
        {
            "name": "__basis",
            "displayName": "",
            "description": "",
            "generator": "Unix Makefiles",
            "binaryDir": "${workspaceFolder}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": false,
                "CMAKE_EXPORT_COMPILE_COMMANDS": "1"
            },
            "debug": {
                "output": false
            }
        },
        {
            "name": "clang",
            "displayName": "",
            "description": "",
