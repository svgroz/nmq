                "__basis"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "gcc",
            "displayName": "",
            "description": "",
            "inherits": [
                "__basis"
            ],
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "clang with test",
            "description": "",
            "displayName": "",
            "inherits": [
                "clang"
            ],
            "cacheVariables": {
                "BUILD_TESTING": "1"
            }
        },
        {
            "name": "gcc with test",
            "description": "",
            "displayName": "",
            "inherits": [
                "gcc"
            ],
            "cacheVariables": {
                "BUILD_TESTING": "1"
            }
        }
    ]
}